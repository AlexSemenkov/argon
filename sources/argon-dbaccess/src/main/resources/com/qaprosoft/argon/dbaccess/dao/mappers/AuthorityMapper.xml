<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qaprosoft.argon.dbaccess.dao.mysql.AuthorityDAO">

	<insert id="createAuthority" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			INSERT INTO argon.AUTHORITIES (AUTHORITY)
			VALUES (
				#{authorityType}
			)
		]]>
	</insert>

	<sql id="getAuthority">
		<![CDATA[
			SELECT
				A.ID AS AUTHORITY_ID,
				A.AUTHORITY AS AUTHORITY_TYPE,
				A.MODIFIED_AT AS AUTHORITY_MODIFIED_AT,
				A.CREATED_AT AS AUTHORITY_CREATED_AT
			FROM argon.AUTHORITIES A
		]]>
	</sql>
	
	<select id="getAllAuthorities" resultMap = "AuthorityResultMap">
		<include refid="getAuthority" />
	</select>

	<select id="getAuthorityByAuthorityType" resultMap = "AuthorityResultMap">
		<include refid="getAuthority" />
		<![CDATA[
			WHERE A.AUTHORITY = #{authorityType}
		]]>
	</select>

	<select id="getAuthorityById" resultMap = "AuthorityResultMap">
		<include refid="getAuthority" />
		<![CDATA[
			WHERE A.ID = #{id}
		]]>
	</select>

	<update id="updateAuthority">
		<![CDATA[
			UPDATE argon.AUTHORITIES A
			SET
				AUTHORITY = #{authorityType}
			WHERE A.ID = #{id}
		]]>
	</update>

	<sql id="deleteAuthority">
		<![CDATA[
			DELETE
			FROM argon.AUTHORITIES
		]]>
	</sql>

	<delete id="deleteAuthorityById">
		<include refid="deleteAuthority" />
		<![CDATA[
			WHERE AUTHORITIES.ID = #{id}
		]]>
	</delete>

	<delete id="deleteAuthorityByAuthorityType">
		<include refid="deleteAuthority" />
		<![CDATA[
			WHERE AUTHORITIES.AUTHORITY = #{authority}
		]]>
	</delete>

	<resultMap type="com.qaprosoft.argon.models.db.Authority" id="AuthorityResultMap" autoMapping="true">
		<id column="AUTHORITY_ID" property="id" />
		<result column="AUTHORITY_TYPE" property="authorityType" />
		<result column="AUTHORITY_MODIFIED_AT" property="modifiedAt" />
		<result column="AUTHORITY_CREATED_AT" property="createdAt" />
	</resultMap>
</mapper>