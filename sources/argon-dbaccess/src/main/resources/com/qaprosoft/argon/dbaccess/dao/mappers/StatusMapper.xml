<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qaprosoft.argon.dbaccess.dao.mysql.StatusDAO">

	<insert id="createStatus" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			INSERT INTO argon.STATUSES (STATUS)
			VALUES (
				#{status}
			)
		]]>
	</insert>

	<sql id="getStatus">
		<![CDATA[
			SELECT
				S.ID AS STATUS_ID,
				S.STATUS AS STATUS_STATUS,
				S.MODIFIED_AT AS STATUS_MODIFIED_AT,
				S.CREATED_AT AS STATUS_CREATED_AT
			FROM argon.STATUSES S
		]]>
	</sql>

	<select id="getStatusByStatus" resultMap="StatusResultMap">
		<include refid="getStatus" />
		<![CDATA[
			WHERE S.STATUS = #{status}
		]]>
	</select>

	<select id="getStatusById" resultMap="StatusResultMap">
		<include refid="getStatus" />
		<![CDATA[
			WHERE S.ID = #{id}
		]]>
	</select>

	<update id="updateStatus">
		<![CDATA[
			UPDATE argon.STATUSES S
			SET
				STATUS = #{status}
			WHERE S.ID = #{id}
		]]>
	</update>

	<sql id="deleteStatus">
		<![CDATA[
			DELETE
			FROM argon.STATUSES 
		]]>
	</sql>

	<delete id="deleteStatusById">
		<include refid="deleteStatus" />
		<![CDATA[
			WHERE STATUSES.ID = #{id}
		]]>
	</delete>

	<delete id="deleteStatusByStatus">
		<include refid="deleteStatus" />
		<![CDATA[
			WHERE STATUSES.STATUS = #{status}
		]]>
	</delete>

	<resultMap type="com.qaprosoft.argon.models.db.Status" id="StatusResultMap"
		autoMapping="true">
		<id column="STATUS_ID" property="id" />
		<result column="STATUS_STATUS" property="status" />
		<result column="STATUS_MODIFIED_AT" property="modifiedAt" />
		<result column="STATUS_CREATED_AT" property="createdAt" />
	</resultMap>
</mapper>